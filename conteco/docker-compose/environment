#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS='streamsets.base'
export CONTECO_DC_GLOBAL_STACKNAMES="streamsets"
export CONTECO_DC_GLOBAL_VOLUME_LIST="streamsets_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_STREAMSETS_ENVIRONMENT,$CONTECO_DC_STREAMSETS_COMMAND,$CONTECO_DC_STREAMSETS_PORTS,$CONTECO_DC_STREAMSETS_NETWORKS,$CONTECO_DC_STREAMSETS_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_STREAMSETS_ENVIRONMENT="\
'SDC_JAVA_OPTS=-Xmx${DOLLAR}{CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}'"
export CONTECO_DC_STREAMSETS_COMMAND=
export CONTECO_DC_STREAMSETS_PORTS=
export CONTECO_DC_STREAMSETS_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_STREAMSETS_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS streamsets.base
export CONTECO_DC_STREAMSETS_VOLUMES="'${CONTECO_TYPE}_streamsets_volume:/data'"
export CONTECO_DC_STREAMSETS_DEPLOY_LABELS=
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="768m"
# END SETTINGS streamsets.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_TYPE}_streamsets_volume: { external: true }"
# END TOPLEVEL SETTINGS
