#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# START SERVICE CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_STREAMSETS_ENVIRONMENT,$CONTECO_DC_STREAMSETS_COMMAND,$CONTECO_DC_STREAMSETS_VOLUMES,$CONTECO_DC_STREAMSETS_DEPLOY_MODE,$CONTECO_DC_STREAMSETS_DEPLOY_REPLICAS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_STREAMSETS_ENVIRONMENT="\
'SDC_JAVA_OPTS=-Xmx${DOLLAR}{CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}'"
export CONTECO_DC_STREAMSETS_COMMAND=
export CONTECO_DC_STREAMSETS_VOLUMES=
export CONTECO_DC_STREAMSETS_DEPLOY_MODE="replicated"
export CONTECO_DC_STREAMSETS_DEPLOY_REPLICAS="1"
# END SERVICE CONFIGURATION

# START VARIABLES streamsets.base
export CONTECO_DC_STREAMSETS_PORTS="18630:18630"
export CONTECO_DC_STREAMSETS_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="768m"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
# END VARIABLES streamsets.base
